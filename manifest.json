{
  "manifest_version": 3,
  "name": "AirPersona",
  "version": "1.0",
  "description": "Secure employee access for Airbnb persona creation with Frappe backend integration",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.airbnb.co.in/users/show/*",
    "https://your-frappe-server.com/*",
    "https://bnb-ai-backend.onrender.com*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.airbnb.co.in/users/show/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Create Airbnb Persona"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["libs/jspdf.umd.min.js"],
      "matches": ["<all_urls>"]
   
    }
  ]
}