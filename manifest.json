{
  "manifest_version": 3,
  "name": "AirPersona",
  "version": "1.0",
  "description": "Scrapes Airbnb profiles and creates detailed personas with AI enhancement",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads",
    "https://cdnjs.cloudflare.com/ajax/libs/jspdf/*"
  ],
   "action": {
    "default_popup": "popup.html",
    "default_title": "AIr Persona Creator",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "https://*.airbnb.com/*",
    "https://*.airbnb.co.in/*",
    "https://bnb-ai-backend.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.airbnb.com/users/show/*",
        "https://*.airbnb.co.in/users/show/*"
      ],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["content.js", "popup.html", "popup.js","pdf-generator.html"],
      "matches": ["https://*.airbnb.com/*", "https://*.airbnb.co.in/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}