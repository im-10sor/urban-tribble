{
  "manifest_version": 3,
  "name": "Airbnb Persona Creator",
  "version": "1.0",
  "description": "Scrapes Airbnb profiles and creates detailed personas with AI enhancement",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://*.airbnb.com/*",
    "https://*.airbnb.co.in/*",
    "https://bnb-ai-backend.onrender.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.airbnb.com/users/show/*",
        "https://*.airbnb.co.in/users/show/*"
      ],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Airbnb Persona Creator"
  },
  "web_accessible_resources": [
    {
      "resources": ["content.js", "popup.html", "popup.js"],
      "matches": ["https://*.airbnb.com/*", "https://*.airbnb.co.in/*"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}